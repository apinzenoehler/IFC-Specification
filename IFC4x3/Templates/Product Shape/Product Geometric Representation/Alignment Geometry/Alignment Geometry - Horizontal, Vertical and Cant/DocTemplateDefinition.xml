												</DocModelRuleEntity>
											</Rules>
										</DocModelRuleAttribute>
										<DocModelRuleAttribute Name="Items">
											<Rules>
												<DocModelRuleEntity Name="IfcSegmentedReferenceCurve">
													<Rules>
