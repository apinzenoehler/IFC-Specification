									</Rules>
								</DocModelRuleEntity>
							</Rules>
						</DocModelRuleAttribute>
					</Rules>
				</DocModelRuleEntity>
			</Rules>
		</DocModelRuleAttribute>
	</Rules>
</DocTemplateDefinition>

